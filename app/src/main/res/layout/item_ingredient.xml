<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:orientation="vertical"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">

    <ImageView
            android:layout_width="9sp"
            android:layout_height="9sp" app:srcCompat="@drawable/ic_dot"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/dot"
            tools:ignore="ContentDescription,SmallSp" app:layout_constraintTop_toTopOf="@+id/ingredient_name"
            app:layout_constraintBottom_toBottomOf="@+id/ingredient_name"
    />
    <com.stubit.cocktailremote.views.TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/ingredient_name"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Ingredient name"
            app:layout_constraintStart_toEndOf="@+id/dot"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            android:textColor="@android:color/white" android:textSize="16sp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>