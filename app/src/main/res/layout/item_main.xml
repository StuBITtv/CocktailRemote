<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
>
    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/cocktailImage"
            android:layout_width="45sp"
            android:layout_height="45sp"
            app:civ_border_width="0dp"
            app:civ_border_color="#FFFFFF"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintVertical_bias="0.0"
            tools:src="@drawable/ic_photo"
            app:civ_circle_background_color="#FFFFFF"
    />
    <com.stubit.cocktailremote.views.TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/cocktailName"
            tools:text="Cocktail Name"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            app:layout_constraintBottom_toBottomOf="@+id/cocktailImage"
            app:layout_constraintTop_toTopOf="@+id/cocktailImage"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/cocktailImage"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>