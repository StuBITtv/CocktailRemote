<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
>
    <de.hdodenhof.circleimageview.CircleImageView
            app:civ_border_width="0dp"
            app:civ_border_color="#FFFFFF"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:civ_circle_background_color="#FFFFFF"
            android:id="@+id/cocktail_image"
            android:layout_width="45sp"
            android:layout_height="45sp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            tools:src="@drawable/ic_photo"
    />
    <com.stubit.cocktailremote.views.TextView
            app:layout_constraintTop_toTopOf="@+id/cocktail_image"
            app:layout_constraintStart_toEndOf="@+id/cocktail_image"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/cocktail_name"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"
            tools:text="Cocktail Name"
    />
    <com.stubit.cocktailremote.views.TextView
            app:layout_constraintBottom_toBottomOf="@+id/cocktail_image"
            app:layout_constraintTop_toBottomOf="@+id/cocktail_name"
            app:layout_constraintStart_toStartOf="@+id/cocktail_name"
            app:layout_constraintEnd_toEndOf="@+id/cocktail_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/description_text"
            android:ellipsize="end"
            android:maxLines="1"
            tools:text="Cocktail description"
    />
</androidx.constraintlayout.widget.ConstraintLayout>