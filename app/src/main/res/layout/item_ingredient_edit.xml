<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:orientation="vertical"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   android:background="@color/colorPrimary">

    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/ingredient_name_input"
            app:layout_constraintEnd_toStartOf="@+id/delete_button"
            app:layout_constraintTop_toTopOf="@+id/delete_button"
            app:layout_constraintBottom_toBottomOf="@+id/delete_button"
            android:layout_marginBottom="8dp" android:layout_marginRight="16dp" android:layout_marginEnd="16dp"
            android:textColor="@android:color/white" tools:text="Ingredient Name" android:importantForAutofill="no"
            tools:ignore="LabelFor"
            app:backgroundTint="@color/colorAccent"
            android:layout_marginTop="8dp"/>
    <Button
            android:layout_width="29sp"
            android:layout_height="35sp"
            app:layout_constraintBottom_toBottomOf="parent" android:id="@+id/delete_button"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="16dp"
            android:background="@drawable/ic_bin" android:contentDescription="@string/delete"
            app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>